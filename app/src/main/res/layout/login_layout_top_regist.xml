<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="用户名"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/login_username"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/radius_8dp_edittext"
            android:drawableLeft="@mipmap/user_icon"
            android:inputType="textEmailAddress"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="请输入用户名"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="密码"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/login_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/radius_8dp_edittext"
            android:drawableLeft="@mipmap/password_icon"
            android:inputType="textPassword"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="请输入密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="确认密码"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/login_password_confim"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/radius_8dp_edittext"
            android:drawableLeft="@mipmap/password_icon"
            android:inputType="textPassword"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="请确认密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="昵称"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/login_name"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/radius_8dp_edittext"
            android:drawableLeft="@mipmap/username_icon"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="请输入昵称"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="电话"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/login_phone"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/radius_8dp_edittext"
            android:drawableLeft="@mipmap/phone_icon"
            android:inputType="phone"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="请输入电话"/>
    </LinearLayout>



</LinearLayout>